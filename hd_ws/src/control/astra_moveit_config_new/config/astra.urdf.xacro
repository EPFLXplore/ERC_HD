<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="astra">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import astra urdf file -->
    <xacro:include filename="$(find astra_description)/urdf/astra.urdf.xacro" />

    <!-- Import control_xacro -->
    <xacro:include filename="astra.ros2_control.xacro" />


    <xacro:astra_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
